<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/mainLayout">
    <ru.hotel72.utils.SingleSlideGallery
            android:layout_width="fill_parent"
            android:layout_height="219dp"
            android:layout_marginTop="4dp"
            android:id="@+id/gallery"
            android:layout_alignLeft="@+id/mainLayout"
            android:layout_below="@+id/mainLayout"
            android:spacing="2dp"
            android:background="#ffffff"
            android:fadingEdge="none"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:text="Забронировать"
            android:id="@+id/booking"
            android:layout_alignLeft="@+id/mainLayout"
            android:layout_alignParentTop="true"
            android:layout_marginTop="188dp"
            android:singleLine="false"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="236dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/infoLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="128dp">
            <ru.yandex.yandexmapkit.MapView
                    android:id="@+id/map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:apiKey="1234567890"
                    android:tag="static"
                    android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:text="Описание"
                android:id="@+id/infoBtn" android:gravity="left"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/shortDesc" android:layout_gravity="left|center_vertical"
                android:paddingTop="25dp"
                android:paddingBottom="27dp" android:paddingRight="9dp" android:paddingLeft="9dp"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:text="Детали"
                android:id="@+id/detailsBtn"
                android:gravity="left"
                android:singleLine="false"/>
        <Button android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:text="Удобства"
                android:id="@+id/facilitiesBtn"
                android:gravity="left"
                android:layout_marginBottom="7dp"
                android:singleLine="false"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/footerLayout">
            <Button
                    android:textSize="13dp"
                    android:layout_width="fill_parent"
                    android:layout_height="46dp"
                    android:text="Поделиться"
                    android:id="@+id/share"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp" android:singleLine="true"/>
            <Button
                    android:textSize="13dp"
                    android:layout_width="fill_parent"
                    android:layout_height="46dp"
                    android:text="Забронировать по телефону"
                    android:id="@+id/phoneBooking"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp" android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
