<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/ymk_balloon_black"
              android:orientation="horizontal">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_marginRight="8dp"
                  android:id="@+id/info">

        <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Осипенко 19"
                android:textColor="@drawable/ymk_balloon_text_color"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:shadowColor="#000000"
                android:textSize="13dp"
                android:layout_marginBottom="5dp"/>

        <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Найдено квартир"
                android:textColor="@drawable/ymk_balloon_text_color"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:shadowColor="#000000"
                android:textSize="10dp"/>
    </LinearLayout>

    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/ballon_arrow"/>

</LinearLayout>