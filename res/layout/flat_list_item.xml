<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="264dp"
                android:background="#ffffff">

    <Gallery
            android:layout_width="fill_parent"
            android:layout_height="219dp"
            android:id="@+id/gallery"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:fadingEdge="none"
            android:layout_alignParentRight="false"
            android:background="#ffffff" android:spacing="2dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost"
            android:id="@+id/cost"
            android:layout_alignLeft="@+id/gallery" android:layout_alignTop="@+id/gallery"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="63dp"
            android:background="@drawable/gallery_item_footer"
            android:id="@+id/gallery_item_footer"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/rooms"
                android:textSize="12dp"
                android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:layout_margin="18dp" android:layout_marginTop="17dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/address"
                android:textSize="10dp"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp" android:layout_marginTop="31dp"/>
        <ToggleButton
                android:layout_width="32dp"
                android:layout_height="31dp"
                android:id="@+id/isLiked"
                android:layout_alignParentRight="true" android:layout_alignBaseline="@+id/rooms"/>
    </RelativeLayout>
</RelativeLayout>